@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="4">
        <MudText Typo="Typo.h6">AI Help Desk</MudText>
        <MudSpacer />

        <AuthorizeView>
            <Authorized Context="context">
                <MudText Typo="Typo.subtitle2" Class="mr-2">Ciao, @context.User.Identity?.Name!</MudText>

                <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="GoProfile">
                    Profilo
                </MudButton>

                <MudButton Color="Color.Error" Variant="Variant.Outlined" OnClick="GoLogout">
                    Logout
                </MudButton>
            </Authorized>
            <NotAuthorized>
                <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="GoLogin">
                    Login
                </MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>

    <MudDrawer Elevation="1" Open="true" Variant="DrawerVariant.Mini" ClipMode="DrawerClipMode.Always">
        <NavMenu />
    </MudDrawer>

    <MudMainContent Class="p-6">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    void GoProfile() => Navigation.NavigateTo("Identity/Account/Manage", forceLoad: true);
    void GoLogin() => Navigation.NavigateTo("Identity/Account/Login", forceLoad: true);
    void GoLogout() => Navigation.NavigateTo("Identity/Account/Logout?returnUrl=/", true);
}
