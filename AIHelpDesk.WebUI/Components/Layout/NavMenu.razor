@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

<MudNavMenu Class="main-nav">

    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
        Home
    </MudNavLink>

    <AuthorizeView>
        <Authorized Context="context">
            @if (context.User.IsInRole("Admin"))
            {
                <MudNavLink Href="/admin" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AdminPanelSettings">
                    Admin
                </MudNavLink>
                <MudNavLink Href="/chat" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Explore">
                    Playground
                </MudNavLink>
            }
            else if (context.User.IsInRole("HelpDeskAgent"))
            {
                <MudNavLink Href="/agent" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.SupportAgent">
                    Agent
                </MudNavLink>
            }
        </Authorized>
    </AuthorizeView>

</MudNavMenu>
